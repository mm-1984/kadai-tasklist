<% tasks.each do |task| %>
    <div>
        <%= link_to task.user.name, user_path(task.user) %>
        posted at <%= task.created_at %>
    </div>
    <div>
        <p>タスク:<%= task.content %> ステータス:<%= task.status %></p>
    </div>
    <div>
        <% if current_user == task.user %>
            <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" } %>
        <% end %>
    </div>
<% end %>